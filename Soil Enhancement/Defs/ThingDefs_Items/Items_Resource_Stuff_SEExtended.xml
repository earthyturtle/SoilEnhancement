    <ThingDef Name="SEEBagBase" ParentName="ResourceBase" Abstract="True">
        <statBases>
            <MarketValue>1</MarketValue>
            <Mass>5</Mass>
        </statBases>
        <thingCategories>
            <li>Manufactured</li>
