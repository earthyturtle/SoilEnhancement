<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <!-- ========== Patch - Alter Outlander Base Market ========== -->

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Let's Trade! [1.0]</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
            
            <li Class="PatchOperationAdd">
                <xpath>/Defs/TraderKindDef[defName = "Orbital_Farming"]/stockGenerators</xpath>
                <value>
                    <li Class="StockGenerator_SingleDef">
                        <thingDef>GravelBag</thingDef>
                        <countRange>
                            <min>5</min>
                            <max>20</max>
                        </countRange>
                    </li>
                    <li Class="StockGenerator_SingleDef">
                        <thingDef>SandBag</thingDef>
                        <countRange>
                            <min>10</min>
                            <max>25</max>
                        </countRange>
                    </li>
                    <li Class="StockGenerator_SingleDef">
                        <thingDef>SoilBag</thingDef>
                        <countRange>
                            <min>0</min>
                            <max>15</max>
                        </countRange>
                    </li>
                    <li Class="StockGenerator_SingleDef">
                        <thingDef>RichSoilBag</thingDef>
                        <countRange>
                            <min>-5</min>
                            <max>10</max>
                        </countRange>
                    </li>
                    <li Class="StockGenerator_SingleDef">
                        <thingDef>BloodNBone</thingDef>
                        <countRange>
                            <min>3</min>
                            <max>8</max>
                        </countRange>
                    </li>
                </value>
            </li>
            
            <li Class="PatchOperationAdd">
                <xpath>/Defs/TraderKindDef[defName = "Caravan_Outlander_Farming"]/stockGenerators</xpath>
                <value>
                    <li Class="StockGenerator_SingleDef">
                        <thingDef>GravelBag</thingDef>
                        <price>Cheap</price>
                        <countRange>
                            <min>5</min>
                            <max>15</max>
                        </countRange>
                    </li>
                    <li Class="StockGenerator_SingleDef">
                        <thingDef>SandBag</thingDef>
                        <price>Cheap</price>
                        <countRange>
                            <min>0</min>
                            <max>10</max>
                        </countRange>
                    </li>
                    <li Class="StockGenerator_SingleDef">
                        <thingDef>SoilBag</thingDef>
                        <countRange>
                            <min>-5</min>
                            <max>5</max>
                        </countRange>
                    </li>
                    <li Class="StockGenerator_SingleDef">
                        <thingDef>RichSoilBag</thingDef>
                        <price>Expensive</price>
                        <countRange>
                            <min>-7</min>
                            <max>3</max>
                        </countRange>
                    </li>
                    <li Class="StockGenerator_SingleDef">
                        <thingDef>BloodNBone</thingDef>
                        <countRange>
                            <min>-1</min>
                            <max>4</max>
                        </countRange>
                    </li>
                </value>
            </li>
            
            <li Class="PatchOperationAdd">
                <xpath>/Defs/TraderKindDef[defName = "Caravan_Neolithic_Farming"]/stockGenerators</xpath>
                <value>
                    <li Class="StockGenerator_SingleDef">
                        <thingDef>GravelBag</thingDef>
                        <price>Cheap</price>
                        <countRange>
                            <min>5</min>
                            <max>10</max>
                        </countRange>
                    </li>
                    <li Class="StockGenerator_SingleDef">
                        <thingDef>SandBag</thingDef>
                        <price>Cheap</price>
                        <countRange>
                            <min>5</min>
                            <max>15</max>
                        </countRange>
                    </li>
                    <li Class="StockGenerator_SingleDef">
                        <thingDef>SoilBag</thingDef>
                        <countRange>
                            <min>-5</min>
                            <max>5</max>
                        </countRange>
                    </li>
                    <li Class="StockGenerator_SingleDef">
                        <thingDef>RichSoilBag</thingDef>
                        <price>Expensive</price>
                        <countRange>
                            <min>-5</min>
                            <max>3</max>
                        </countRange>
                    </li>
                    <li Class="StockGenerator_SingleDef">
                        <thingDef>BloodNBone</thingDef>
                        <countRange>
                            <min>-2</min>
                            <max>2</max>
                        </countRange>
                    </li>
                </value>
            </li>
        </operations>
		</match>
    </Operation>


    <!-- === Code for 'The Rock Trade' by EarthyTurtle. === -->
    <!-- === This label is actually just so I don't accidently place anything after the Patch tag. :P === -->
</Patch>
